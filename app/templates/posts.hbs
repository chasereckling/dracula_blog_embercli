<h1>Posts</h1>

<div class="col-md-4">
  <ul class="list-unstyled">
    {{#each}}
      <li>
        {{#link-to 'post' this}}
          {{title}}
            <span class="muted">
              by {{author.name}}
            </span>
          {{/link-to}}
      </li>
    {{/each}}
  </ul>
</div>

<div class="col-md-8">
  {{outlet}}
</div>
